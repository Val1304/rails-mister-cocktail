
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('http://419a5ecf000c70751b96-2d268c5dae618615daa5314a1f0f4b99.r77.cf1.rackcdn.com/restaurants-irs/235125/EclipseCocktails1.png');">
  <div class="banner-content">
    <h1 class="text-center">Your cocktail list</h1>
      <div class="text-center padded">
        <%= link_to "Create a cocktail", new_cocktail_path, class: "btn btn-primary" %>
      </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <%= link_to cocktail.name, cocktail_path(cocktail) %>
      </div>

    <% end %>
    <%= cl_image_tag("sf.jpg",
      width: 400, height: 300, crop: :fill) %>
  </div>
</div>

