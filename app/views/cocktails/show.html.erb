<h1 class="text-left"><%= @cocktail.name %></h1>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <% @cocktail.doses.each do |dose| %>
        <%= dose.description %>
        <%= dose.ingredient.name %>
        <p><%= link_to "Delete Dose", dose_path(dose), method: :delete %></p>
      <% end %>
    </div>
  </div>
  <p><%= link_to "Add a Dose", new_cocktail_dose_path(@cocktail)%></p>
  <%= link_to "Back", cocktails_path %>

</div>


